<h3>Add word</h3>
<form id="addNewWordForm" >
    <div class="form-group">
        <div class="form-group">
            <label for="word">Enter new word</label>
            {{input value=word placeholder="Word" class="form-control"}}
        </div>
        <div class="form-group">
            <label for="translate">Enter translate for this word</label>
            {{input value=translate placeholder="Translation" class="form-control"}}
        </div>
        <button {{action "saveWord"}} class="btn btn-dark">Save</button>
    </div>
</form>

{{#if message}}
    <div class="alert alert-success" role="alert">
    {{message}}
    </div>
{{/if}}

{{#if error}}
    <div class="alert alert-danger" role="alert">
    {{error}}
    </div>
{{/if}}